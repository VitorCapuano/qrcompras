@model QRCompras.Models.FaleConosco

@{
    ViewBag.Title = "Contato";
}

<h1>Fale Conosco</h1>
@{
    if (ViewBag.successMessage != "")
    {
        <div class="alert alert-success">
            Contato enviado com sucesso!
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            Por favor tente novamente!
        </div>
    }
    
}


@using (Html.BeginForm())
{
    <div class="container">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.Assunto)
                <div class="col">
                    @Html.TextBoxFor(m => m.Assunto, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                <div class="col">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Mensagem)
                <div class="col">
                    @Html.TextAreaFor(m => m.Mensagem, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary"/>
            </div>
        </div>

    </div>
    
    
}
